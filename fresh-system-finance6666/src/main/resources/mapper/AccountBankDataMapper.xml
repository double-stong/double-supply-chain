<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.fresh.mapper.AccountBankDataMapper">
  <resultMap id="BaseResultMap" type="com.aaa.fresh.pojo.AccountBankData">
    <id column="ID" jdbcType="VARCHAR" property="id" />
  </resultMap>
  <select id="selectByPrimaryKey_Bank" resultMap="BaseResultMap">
    select 
    id, opening_bank, account_number, property, version
    from account_bank_data
    where ID = #{id}
  </select>
  <update id="updateByPrimaryKey_Bank" parameterType="com.aaa.fresh.pojo.AccountBankData">
    update account_bank_data
    <set>
      <if test="openingBank != null">
        OPENING_BANK = #{openingBank},
      </if>
      <if test="accountNumber != null">
        ACCOUNT_NUMBER = #{accountNumber},
      </if>
      <if test="property != null">
        property = #{property},
      </if>
      <if test="version != null">
        VERSION = #{version},
      </if>
    </set>
    where ID = #{id}
  </update>
</mapper>