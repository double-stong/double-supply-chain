  <select id="selectAll_BSI" resultMap="BSI_All_Info">
    select bsi.*,abd.* ,adasd.*,cod.*
    from account_bank_sell_info_data bsi,
    account_bank_data abd,
    accounting_document_auditing_sell_data adasd,
    contract_order_data cod
    where bsi.soid = cod.OID
        and bsi.bankId = abd.ID
        and	adasd.soid = cod.OID
    <if test="id != null and id != ''">
      and bsi.ID = #{id}
    </if>
    <!--<if test="adasd.who != null and adasd.who != ''">
      and adasd.who = #{who}
    </if>-->
  </select>

