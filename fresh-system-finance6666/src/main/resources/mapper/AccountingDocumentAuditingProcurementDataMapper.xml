  <update id="update_PRD">
    update procurement_item_data
    set name = #{name},product = #{product},quatity = #{quatity},unitprice=#{unitprice}
        procurement_requirement=#{procurement_requirement},status=#{status},version=#{version},eid=#{eid}
    where id = #{id}
  </update>

