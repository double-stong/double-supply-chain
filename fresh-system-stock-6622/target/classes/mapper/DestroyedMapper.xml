<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.fresh.mapper.DestroyedMapper">
    <resultMap id="destroyedRegistrationDataMap" type="DestroyedRegistrationData">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="product" jdbcType="VARCHAR" property="product" />
        <result column="quantity" jdbcType="DOUBLE" property="quantity" />
        <result column="destroyed_value" jdbcType="DOUBLE" property="destroyedValue" />
        <result column="registration_comment" jdbcType="VARCHAR" property="registrationComment" />
        <result column="registered_time" jdbcType="DATE" property="registeredTime" />
        <result column="warehouse" jdbcType="VARCHAR" property="warehouse" />
        <result column="merchant" jdbcType="VARCHAR" property="merchant" />
        <result column="booker" jdbcType="VARCHAR" property="booker" />
        <result column="version" jdbcType="INTEGER" property="version" />
    </resultMap>

    <sql id="sel">
        <if test="id != null and id != ''">
            and a.id = #{id}
        </if>
        <if test="name != null and name != ''">
            and a.name = #{name}
        </if>
        <if test="product != null and product != ''">
            and a.product = #{product}
        </if>
        <if test="registrationComment != null and registrationComment != ''">
            and a.registration_comment = #{registrationComment}
        </if>
        <if test="warehouse != null and warehouse != ''">
            and a.warehouse = #{warehouse}
        </if>
        <if test="booker != null and booker != ''">
            and a.booker = #{booker}
        </if>
    </sql>

    <!--查询条数  根据id 名称  产品  评论  仓库  登记人进行查询-->
    <select id="getTotal" parameterType="DestroyedRegistrationData" resultType="Long">
        SELECT  COUNT(*) FROM supplychain.destroyed_registration_data a
        <where>
            <include refid="sel"/>
        </where>
    </select>

    <!--查询所有的-->
    <select id="selAllDestroy" parameterType="DestroyedRegistrationData" resultMap="destroyedRegistrationDataMap">
        SELECT a.ID, a.NAME, b.NAME product, a.QUANTITY, a.DESTROYED_VALUE, a.REGISTRATION_COMMENT, a.REGISTERED_TIME, c.NAME warehouse, a.MERCHANT, a.BOOKER, a.VERSION
        FROM supplychain.destroyed_registration_data a,
             supplychain.product_data b,
             supplychain.merchant_warehouse_data c
        where a.PRODUCT = b.ID and a.WAREHOUSE = c.ID
        <include refid="sel"/>
        <if test="page != null and size != null">
            limit #{page},#{size}
        </if>
    </select>

    <!--添加损耗记录-->
    <insert id="addDestroy" parameterType="DestroyedRegistrationData">
        INSERT INTO supplychain.destroyed_registration_data
        (ID, NAME, PRODUCT, QUANTITY, DESTROYED_VALUE, REGISTRATION_COMMENT, REGISTERED_TIME, WAREHOUSE,  BOOKER, VERSION)
        VALUES(#{id}, #{name}, #{product}, #{quantity}, #{destroyedValue}, #{registrationComment}, now(), #{warehouse}, #{booker},1)
    </insert>

    <!--查询单个损耗-->
    <select id="selOneDestroy" parameterType="String" resultMap="destroyedRegistrationDataMap">
        SELECT ID, NAME, PRODUCT, QUANTITY, DESTROYED_VALUE, REGISTRATION_COMMENT, REGISTERED_TIME, WAREHOUSE, MERCHANT, BOOKER, VERSION
        FROM supplychain.destroyed_registration_data
        WHERE ID = #{id}
    </select>

    <!--修改损耗-->
    <update id="updDestroy" parameterType="DestroyedRegistrationData">
        UPDATE supplychain.destroyed_registration_data
        <set>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="product != null and product != ''">
                PRODUCT = #{product},
            </if>
            <if test="quantity != null and quantity != ''">
                QUANTITY = #{quantity},
            </if>
            <if test="destroyedValue != null and destroyedValue != ''">
                DESTROYED_VALUE = #{destroyedValue},
            </if>
            <if test="registrationComment != null and registrationComment != ''">
                REGISTRATION_COMMENT = #{registrationComment},
            </if>
            <if test="warehouse != null and warehouse != ''">
                WAREHOUSE = #{warehouse},
            </if>
            <if test="booker != null and booker != ''">
                BOOKER = #{booker},
            </if>
            REGISTERED_TIME = NOW(),
        </set>
        WHERE ID= #{id}
    </update>

    <!--删除-->
    <delete id="delDestroy" parameterType="String">
        DELETE FROM supplychain.destroyed_registration_data
        WHERE ID = #{id}
    </delete>

    <!--添加损耗，减少修改库存-->
    <update id="updDestroyById">
        UPDATE supplychain.inventory_data
        <set>
            <if test="quantity != null and quantity != ''">
                QUANTITY = QUANTITY-#{quantity},
            </if>
            LAST_UPDATE_TIME=NOW(),
        </set>
        WHERE  WAREHOUSE = #{warehouse}
        AND PRODUCT = #{product}
    </update>
</mapper>